<ul class="notification-message-list">
  {{#each messages}}
  <li class="notification-message">
    <a href="{{url}}">
      <div class="d-flex">
        <div class="flex-shrink-0">
          <img class="me-2" src="{{message.sender.image}}" width="50" height="50" alt="">
        </div>
        <div class="flex-grow-1">
          <p class="mb-0 font-weight-bold text-truncate">
            {{message.sender.name}}
          </p>
          <p class="mb-0 text-body-secondary text-truncate">
            {{message.body}}
          </p>
          <p class="mb-0 text-body-secondary">
            <small>{{localize "datetime.formats.message" message.date_sent}}</small>
          </p>
        </div>
      </div>
  </li>
  {{/each}}
</ul>
